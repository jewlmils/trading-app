<header class="sticky bg-gray24 top-0 w-full shadow-md z-10">
    <nav class="container mx-auto py-4 px-6">
        <div class="flex justify-between items-center">
            <%= link_to 'Trading App', root_path, class: "txt-gradient text-2xl font-bold text-white" %> 
            <div class="hidden md:flex items-center space-x-4">
                <% if trader_signed_in? %>
                    <%= link_to 'Logout', destroy_trader_session_path, data: { "turbo-method": :delete}, class: "btn-main" %>
                <% elsif admin_signed_in? %>
                    <%= link_to 'Logout', destroy_admin_session_path, data: { "turbo-method": :delete}, class: "btn-main" %>
                <% else %>
                    <%= link_to 'Log in', new_trader_session_path, class: "btn-secondary" %>
                    <%= link_to 'Sign up', new_trader_registration_path, class: "btn-main" %>
                <% end %>
            </div>
        </div>
    </nav>
</header>
